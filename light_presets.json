{
    "version": 6,
    "configurePresets": [
        {
            "name": "conf-light-base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja"
        },
        {
            "name": "conf-light-host-base",
            "inherits": ["conf-light-base"],
            "hidden": true,
            "cacheVariables": {
                "LIGHT_PLATFORM": "HOST",
                "LIGHT_SYSTEM": "HOST_OS",
                "LIGHT_GENERATE_LOG_LEVEL": "INFO",
                "LIGHT_LOG_LEVEL_DEFAULT": "INFO"
            }
        },
        {
            "name": "conf-light-pico-base",
            "hidden": true,
            "inherits": [
                "conf-light-base"
            ],
            "cacheVariables": {
                "LIGHT_SYSTEM": "PICO_SDK",
                "PICO_SDK_PATH": "$env{PICO_SDK_PATH}"
            }
        },
        {
            "name": "conf-light-pico",
            "hidden": true,
            "inherits": [
                "conf-light-pico-base"
            ],
            "cacheVariables": {
                "LIGHT_PLATFORM": "TARGET",
                "LIGHT_BOARD": "pico"
            }
        },
        {
            "name": "conf-light-debug",
            "hidden": true,
            "inherits": ["conf-light-base"],
            "cacheVariables": {
                "LIGHT_RUN_MODE": "DEBUG",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "conf-light-trace",
            "hidden": true,
            "inherits": ["conf-light-base"],
            "cacheVariables": {
                "LIGHT_RUN_MODE": "TRACE",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "conf-light-release",
            "hidden": true,
            "inherits": ["conf-light-base"],
            "cacheVariables": {
                "LIGHT_RUN_MODE": "PRODUCTION",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "conf-light-host-debug",
            "inherits": [
                "conf-light-host-base",
                "conf-light-debug"
            ]
        },
        {
            "name": "conf-light-host-trace",
            "inherits": [
                "conf-light-host-base",
                "conf-light-trace"
            ]
        },
        {
            "name": "conf-light-host-release",
            "inherits": [
                "conf-light-host-base",
                "conf-light-release"
            ]
        },
        {
            "name": "conf-light-pico-debug",
            "inherits": [
                "conf-light-pico",
                "conf-light-debug"
            ]
        },
        {
            "name": "conf-light-pico-release",
            "inherits": [
                "conf-light-pico",
                "conf-light-release"
            ]
        },
        {
            "name": "conf-light-pico2",
            "inherits": [
                "conf-light-pico-base"
            ],
            "cacheVariables": {
                "LIGHT_BOARD": "pico2"
            }
        },
        {
            "name": "conf-light-pico_w",
            "inherits": [
                "conf-light-pico-base"
            ],
            "cacheVariables": {
                "LIGHT_BOARD": "pico_w"
            }
        },
        {
            "name": "conf-light-pico-host",
            "inherits": [
                "conf-light-pico-base",
                "conf-light-debug"
            ],
            "cacheVariables": {
                "LIGHT_PLATFORM": "HOST",
                "LIGHT_BOARD": "pico_hostmode",
                "PICO_BOARD": "none"
            }
        }
    ]
}
